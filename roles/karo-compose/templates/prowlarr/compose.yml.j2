---
name: prowlarr
services:

  prowlarr:
    # https://github.com/prowlarr/prowlarr
    # https://hub.docker.com/r/linuxserver/prowlarr
    image: docker.io/linuxserver/prowlarr:version-2.3.0.5236@sha256:67a8aaedcfd6989f3030b937a6a07007310b1dfc7ee8df16d2cbfa48d1c1158c
    container_name: prowlarr
    restart: {{ karo_compose_restart_policy }}
    network_mode: "container:gluetun"
    volumes:
      - type: volume
        source: prowlarr_data
        target: /config
    labels:
      - traefik.enable=true
      - traefik.http.routers.prowlarr.rule=Host(`prowlarr.{{ karo_compose_private_domain }}`)
      - traefik.http.services.prowlarr.loadbalancer.server.port=9696
    environment:
      - TZ={{ karo_compose_timezone }}
      - PUID=1000
      - PGID=1000

volumes:
  prowlarr_data:
    name: prowlarr_data
